{
	"name": "workspace-site",
	"version": "0.0.7",
	"private": true,
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"dev": "wireit",
		"preview": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"dependencies": [
				"../../packages/rune-components:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"static/**",
				"svelte.config.js",
				"vite.config.js"
			],
			"output": [
				"build/**"
			]
		},
		"check": {
			"command": "svelte-check --tsconfig ./tsconfig.json",
			"dependencies": [
				"sync",
				"../../packages/rune-components:build"
			],
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"dev": {
			"command": "vite dev",
			"dependencies": [
				"../../packages/rune-components:build:dev"
			]
		},
		"pre-commit": {
			"dependencies": [
				"check",
				"test"
			]
		},
		"preview": {
			"command": "vite preview",
			"dependencies": [
				"build"
			],
			"files": [],
			"output": []
		},
		"sync": {
			"command": "svelte-kit sync",
			"files": [
				"src/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"test": {
			"command": "vitest run",
			"dependencies": [
				"sync"
			],
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"dependencies": {
		"@content-thing/memdb": "^0.0.10",
		"@mdi/js": "^7.2.96",
		"@svelte-thing/component-utils": "workspace:^",
		"@svelte-thing/components": "workspace:^",
		"@svelte-thing/dom-event": "workspace:^",
		"@svelte-thing/rune-components": "workspace:^"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.5.28",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.3",
		"svelte": "^5.0.0-next.265",
		"svelte-check": "^4.0.0",
		"typescript": "^5.6.0",
		"vite": "^5.4.8",
		"vitest": "^2.1.3"
	},
	"type": "module"
}
