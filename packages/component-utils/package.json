{
	"name": "@svelte-thing/component-utils",
	"version": "0.0.10",
	"scripts": {
		"build": "wireit",
		"pre-commit": "wireit",
		"publint": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tsc --build",
			"files": [
				"src/**/*.{js,ts}",
				"tsconfig.json",
				"../../config/tsconfig.base.json"
			],
			"output": [
				"dist"
			]
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"build"
			],
			"files": [
				"dist",
				"package.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"build",
				"publint"
			]
		},
		"release": {
			"dependencies": [
				"build",
				"publint"
			]
		},
		"test": {
			"command": "vitest run",
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"exports": {
		"./svelte": {
			"types": "./dist/svelte/index.d.ts",
			"svelte": "./dist/svelte/index.js",
			"default": "./dist/svelte/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/types/index.js"
		}
	},
	"files": [
		"dist",
		"!**/*.test.js",
		"!**/*.test.js.map",
		"!**/*.test.d.ts"
	],
	"dependencies": {
		"esm-env": "^1.0.0"
	},
	"peerDependencies": {
		"svelte": "^5.19.0"
	},
	"devDependencies": {
		"publint": "^0.3.2",
		"svelte": "^5.19.0",
		"typescript": "^5.6.0",
		"vitest": "^3.0.4"
	},
	"type": "module"
}
