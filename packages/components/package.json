{
	"name": "@svelte-thing/components",
	"version": "0.0.3",
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"dev": "vite dev",
		"format": "wireit",
		"lint": "wireit",
		"package": "wireit",
		"publint": "wireit",
		"sync": "wireit"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"files": [
				"src/**/*.{js,ts,svelte}",
				"static/**",
				"svelte.config.js",
				"vite.config.js"
			],
			"output": [
				"./svelte-kit/output",
				"build"
			]
		},
		"check": {
			"command": "svelte-check --tsconfig ./tsconfig.json",
			"dependencies": [
				"sync"
			],
			"files": [
				"{src,test}/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"format": {
			"command": "prettier . --write --cache",
			"files": [
				"**/*.{css,html,js,json,md,ts,svelte}",
				"!types/**",
				"!dist/**",
				"!.svelte-kit/**",
				".prettierignore",
				"prettier.config.js"
			],
			"dependencies": [
				"../prettier-config:package"
			],
			"output": []
		},
		"lint": {
			"command": "eslint \"**/*.{js,svelte}\" --color --cache --fix",
			"files": [
				"**/*.{js,svelte}",
				".eslintignore",
				"eslint.config.js"
			],
			"output": []
		},
		"package": {
			"command": "svelte-package -i ./src/lib",
			"files": [
				"src/**/*.{js,ts,svelte}",
				"svelte.config.js",
				"tsconfig.json"
			],
			"output": [
				"dist"
			]
		},
		"pre-commit": {
			"dependencies": [
				"check",
				"format",
				"publint",
				"sync"
			]
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"package"
			],
			"files": [
				"dist",
				"package.json"
			],
			"output": []
		},
		"release": {
			"dependencies": [
				"package",
				"publint"
			]
		},
		"sync": {
			"command": "svelte-kit sync",
			"files": [
				"src/**/*.{js,ts,svelte}",
				"static/**",
				"svelte.config.js",
				"vite.config.js",
				"tsconfig.json"
			],
			"output": []
		}
	},
	"exports": {
		".": {
			"types": "./dist/components/index.d.ts",
			"svelte": "./src/lib/components/index.js",
			"default": "./src/lib/components/index.js"
		},
		"./creators": {
			"types": "./dist/creators/index.d.ts",
			"svelte": "./src/lib/creators/index.js",
			"default": "./src/lib/creators/index.js"
		},
		"./dom": {
			"types": "./dist/dom/dom.d.ts",
			"default": "./src/lib/dom/dom.js"
		},
		"./icon": {
			"types": "./dist/components/icon/index.d.ts",
			"svelte": "./src/lib/components/icon/index.js",
			"default": "./src/lib/components/icon/index.js"
		},
		"./markdown": {
			"types": "./dist/components/markdown/index.d.ts",
			"svelte": "./src/lib/components/markdown/index.js",
			"default": "./src/lib/components/markdown/index.js"
		},
		"./shell": {
			"types": "./dist/components/shell/index.d.ts",
			"svelte": "./src/lib/components/shell/index.js",
			"default": "./src/lib/components/shell/index.js"
		},
		"./sidebar": {
			"types": "./dist/components/sidebar/index.d.ts",
			"svelte": "./src/lib/components/sidebar/index.js",
			"default": "./src/lib/components/sidebar/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src/lib",
		"!src/lib/**/*.test.*",
		"!src/lib/**/*.spec.*"
	],
	"dependencies": {
		"@mdi/js": "^7.2.96"
	},
	"peerDependencies": {
		"@fig/lezer-bash": "^1.2.5",
		"@lezer/common": "^1.1.0",
		"@lezer/cpp": "^1.1.1",
		"@lezer/css": "^1.1.3",
		"@lezer/highlight": "^1.1.6",
		"@lezer/html": "^1.3.6",
		"@lezer/javascript": "^1.4.7",
		"@lezer/json": "^1.0.1",
		"@lezer/lr": "^1.3.12",
		"@lezer/python": "^1.1.8",
		"@lezer/rust": "^1.0.1",
		"@replit/codemirror-lang-svelte": "^6.0.0",
		"@sveltejs/kit": "^1.20.4",
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.2.0",
		"@types/mdast": "^4.0.1",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.47.0",
		"eslint-config": "workspace:*",
		"postcss": "^8.4.27",
		"prettier": "^3.0.2",
		"prettier-config": "workspace:*",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.3",
		"publint": "^0.2.2",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.4.1",
		"typescript": "^5.1.6",
		"vite": "^4.4.2"
	},
	"prettier": "prettier-config",
	"license": "MIT",
	"type": "module"
}
