{
	"name": "@svelte-thing/reactivity",
	"version": "0.0.2",
	"scripts": {
		"build": "wireit",
		"pre-commit": "wireit",
		"publint": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tsc --build",
			"files": [
				"src/**/*.{js,ts}",
				"tsconfig.json",
				"../../config/tsconfig.base.json"
			],
			"output": [
				"dist"
			]
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"build"
			],
			"files": [
				"src/**",
				"types/**",
				"package.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"build",
				"publint"
			]
		},
		"release": {
			"dependencies": [
				"build",
				"publint"
			]
		},
		"test": {
			"command": "vitest run",
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!**/*.test.js",
		"!**/*.test.js.map",
		"!**/*.test.d.ts"
	],
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/node": "^20.10.5",
		"jsdom": "^25.0.0",
		"publint": "^0.2.6",
		"svelte": "5.0.0-next.260",
		"typescript": "^5.4.5",
		"vite": "^5.4.0",
		"vitest": "^2.1.1"
	},
	"type": "module"
}
