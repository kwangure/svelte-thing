{
	"name": "@svelte-thing/rune-components",
	"version": "0.0.20",
	"scripts": {
		"build": "wireit",
		"build:dev": "wireit",
		"check": "wireit",
		"pre-commit": "wireit",
		"publint": "wireit",
		"test": "wireit",
		"test:dev": "wireit"
	},
	"wireit": {
		"build": {
			"command": "svelte-package -i ./src --tsconfig ./tsconfig.build.json",
			"files": [
				"src/**/*.{js,svelte,ts}",
				"tsconfig.build.json",
				"../../config/tsconfig.base.json"
			],
			"#comment": "Empty output. Rely on svelte-package to clean up the output dist folder lazily",
			"output": []
		},
		"build:dev": {
			"command": "svelte-package -i ./src --tsconfig ./tsconfig.build.json --watch",
			"service": true,
			"files": [
				"src/**/*.{js,svelte,ts}",
				"tsconfig.build.json",
				"../../config/tsconfig.base.json"
			]
		},
		"check": {
			"command": "svelte-check --tsconfig ./tsconfig.json",
			"files": [
				"{src,test}/**/*.{js,ts,svelte}",
				"tsconfig.json",
				"../../config/tsconfig.base.json"
			],
			"output": []
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"build"
			],
			"files": [
				"dist",
				"package.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"build",
				"check",
				"publint",
				"test"
			]
		},
		"release": {
			"dependencies": [
				"build",
				"check",
				"publint",
				"test"
			]
		},
		"test": {
			"command": "vitest run --workspace=vitest.workspace.ts",
			"files": [
				"src/**/*.{js,ts}",
				"vitest.workspace.ts"
			],
			"output": []
		},
		"test:dev": {
			"command": "vitest --workspace=vitest.workspace.ts",
			"files": [
				"src/**/*.{js,ts}",
				"vitest.workspace.ts"
			],
			"output": []
		}
	},
	"exports": {
		".": {
			"types": "./dist/types.d.ts"
		},
		"./combobox": {
			"types": "./dist/combobox/index.d.ts",
			"svelte": "./dist/combobox/index.js",
			"default": "./dist/combobox/index.js"
		},
		"./dialog": {
			"types": "./dist/dialog/index.d.ts",
			"svelte": "./dist/dialog/index.js",
			"default": "./dist/dialog/index.js"
		},
		"./menu": {
			"types": "./dist/menu/index.d.ts",
			"svelte": "./dist/menu/index.js",
			"default": "./dist/menu/index.js"
		}
	},
	"files": [
		"dist",
		"!**/*.test.js",
		"!**/*.test.js.map",
		"!**/*.test.d.ts"
	],
	"dependencies": {
		"@svelte-thing/component-utils": "^0.0.10",
		"@svelte-thing/dom-event": "^0.0.5",
		"esm-env": "catalog:",
		"uid": "catalog:"
	},
	"devDependencies": {
		"@sveltejs/package": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@vitest/browser": "catalog:",
		"playwright": "catalog:",
		"publint": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vitest": "catalog:",
		"vitest-browser-svelte": "catalog:"
	},
	"peerDependencies": {
		"svelte": "^5.19.0"
	},
	"type": "module"
}
