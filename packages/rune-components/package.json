{
	"name": "@svelte-thing/rune-components",
	"version": "0.0.2",
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"pre-commit": "wireit",
		"publint": "wireit",
		"test": "wireit",
		"test:dev": "wireit"
	},
	"wireit": {
		"build": {
			"command": "svelte-package -i ./src --tsconfig ./tsconfig.build.json",
			"files": [
				"src/**/*.{js,svelte,ts}",
				"tsconfig.build.json",
				"../../config/tsconfig.base.json"
			],
			"#comment": "Empty output. Rely on svelte-package to clean up the output dist folder lazily",
			"output": []
		},
		"check": {
			"command": "svelte-check --tsconfig ./tsconfig.json",
			"files": [
				"{src,test}/**/*.{js,ts,svelte}",
				"tsconfig.json",
				"../../config/tsconfig.base.json"
			],
			"output": []
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"build"
			],
			"files": [
				"dist",
				"package.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"build",
				"check",
				"publint",
				"test"
			]
		},
		"release": {
			"dependencies": [
				"build",
				"check",
				"publint",
				"test"
			]
		},
		"test": {
			"command": "vitest run --workspace=vitest.workspace.ts",
			"files": [
				"src/**/*.{js,ts}",
				"vitest.workspace.ts"
			],
			"output": []
		},
		"test:dev": {
			"command": "vitest --workspace=vitest.workspace.ts",
			"files": [
				"src/**/*.{js,ts}",
				"vitest.workspace.ts"
			],
			"output": []
		}
	},
	"exports": {
		"./combobox": {
			"types": "./dist/combobox/components/index.d.ts",
			"svelte": "./dist/combobox/components/index.js",
			"default": "./dist/combobox/components/index.js"
		},
		"./combobox/runes": {
			"types": "./dist/combobox/runes/index.d.ts",
			"svelte": "./dist/combobox/runes/index.js",
			"default": "./dist/combobox/runes/index.js"
		}
	},
	"files": [
		"dist",
		"!**/*.test.js",
		"!**/*.test.js.map",
		"!**/*.test.d.ts"
	],
	"dependencies": {
		"@svelte-thing/component-utils": "^0.0.4",
		"@svelte-thing/components": "^0.0.33",
		"@svelte-thing/dom-event": "^0.0.4",
		"uid": "^2.0.2"
	},
	"devDependencies": {
		"@sveltejs/package": "^2.3.5",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@vitest/browser": "^2.1.2",
		"playwright": "^1.48.0",
		"publint": "^0.2.6",
		"svelte": "^5.0.0-next.264",
		"svelte-check": "^4.0.0",
		"typescript": "^5.4.5",
		"vite": "^5.4.8",
		"vitest": "^2.1.2",
		"vitest-browser-svelte": "^0.0.1"
	},
	"peerDependencies": {
		"svelte": "^5.0.0-next.264"
	},
	"type": "module"
}
