{
	"name": "@svelte-thing/builders",
	"version": "0.0.1",
	"scripts": {
		"build": "wireit",
		"pre-commit": "wireit",
		"publint": "wireit",
		"test": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tsc --build",
			"files": [
				"src/**/*.{js,ts}",
				"tsconfig.json",
				"../../config/tsconfig.base.json"
			],
			"output": [
				"types"
			]
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"build"
			],
			"files": [
				"src/**",
				"types/**",
				"package.json"
			],
			"output": []
		},
		"pre-commit": {
			"dependencies": [
				"build",
				"publint",
				"test"
			]
		},
		"release": {
			"dependencies": [
				"build",
				"publint",
				"test"
			]
		},
		"test": {
			"command": "vitest run",
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./combobox": {
			"types": "./dist/combobox/index.d.ts",
			"svelte": "./dist/combobox/index.js",
			"default": "./dist/combobox/index.js"
		}
	},
	"files": [
		"dist",
		"!**/*.test.js",
		"!**/*.test.js.map",
		"!**/*.test.d.ts"
	],
	"dependencies": {
		"@svelte-thing/dom-event": "^0.0.1",
		"@svelte-thing/state-event": "^0.0.1",
		"uid": "^2.0.2"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/node": "^20.10.5",
		"jsdom": "^25.0.0",
		"publint": "^0.2.6",
		"svelte": "5.0.0-next.227",
		"typescript": "^5.4.5",
		"vite": "^5.0.0",
		"vitest": "^1.6.0"
	},
	"type": "module"
}
